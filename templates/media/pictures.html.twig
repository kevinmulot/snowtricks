{% extends 'base.html.twig' %}

{% block title %}Pictures{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            {% if statut == 'normal' %}
                <h1 class="h1 col-12 mt-3 mb-3 font-weight-normal text-center d-md-block d-none">Add picture</h1>
            {% else %}<h1 class="h1 col-12 mt-3 mb-3 font-weight-normal text-center d-md-block d-none">Change cover
                picture</h1>
            {% endif %}
            <div class="border text-center mt-4 col-8">
                {% if statut == 'normal' %}
                    <h2 class="h1 mb-3 font-weight-normal text-center d-none d-sm-block d-block d-md-none">Add
                        Picture</h2>
                {% else %}
                    <h2 class="h1 mb-3 font-weight-normal text-center d-none d-sm-block d-block d-md-none">Change cover
                        picture</h2>
                {% endif %}
                {{ form_start(pictureForm) }}
                {{ form_row(pictureForm.picture) }}
                {{ form_row(pictureForm.submit) }}
                {{ form_end(pictureForm) }}
            </div>
        </div>
    </div>
{% endblock %}
