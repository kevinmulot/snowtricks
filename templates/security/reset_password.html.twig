{% extends 'base.html.twig' %}

{% block title %}Reset Password !{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="col-12 mt-3 mb-3 font-weight-normal text-center d-md-block d-none">Forgotten Password</h1>
            <div class="border text-center mt-4 col-8">
                <h2 class="h1 mb-3 font-weight-normal text-center d-none d-sm-block d-block d-md-none">Forgotten
                    Password</h2>
                {{ form_start(resetPasswordForm, { 'attr': {'class': 'mt-2'} }) }}
                {{ form_row(resetPasswordForm.username, { 'attr': {'class': 'text-center'} }) }}
                {{ form_row(resetPasswordForm.plainPassword, { 'attr': {'class': 'text-center'} }) }}
                {{ form_row(resetPasswordForm.token) }}
                {{ form_row(resetPasswordForm.reset, { 'attr': {'class': 'text-center btn btn-primary'} }) }}
                {{ form_end(resetPasswordForm) }}
            </div>
        </div>
    </div>
{% endblock %}
